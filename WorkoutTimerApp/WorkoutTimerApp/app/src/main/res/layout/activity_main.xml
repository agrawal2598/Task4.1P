<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.workoutTimerApp.MainActivity">

    <TextView
        android:id="@+id/studytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9C27B0"
        android:textSize="18sp"
        android:layout_above="@id/countdownText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="70sp"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/countdownText"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text=""
        android:background="@drawable/play"
        />

    <Button
        android:id="@+id/pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/countdownText"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="190dp"
        android:text=""
        android:background="@drawable/pause"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/countdownText"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-1dp"
        android:text=""
        android:background="@drawable/stop"
        />

    <TextView
        android:id="@+id/workoutType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9C27B0"
        android:textSize="18sp"
        android:text="Enter your workout type:"
        android:layout_below="@id/start"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/workoutTextField"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:layout_toRightOf="@id/workoutType"
        />
</RelativeLayout>